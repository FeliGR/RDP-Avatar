{
  "semi": true,
  "singleQuote": false,         
  "jsxSingleQuote": false,      
  "trailingComma": "all",       
  "arrowParens": "always",      
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,       
  "bracketSameLine": false,     
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.css", "*.scss", "*.less"],
      "options": {
        "tabWidth": 2           
      }
    }
  ]
}
